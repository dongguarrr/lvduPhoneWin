
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ModifyNav</title>

    <!-- jquery -->
    <script src="http://libs.baidu.com/jquery/2.1.4/jquery.min.js"></script>

    <!-- vue -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.13/dist/vue.js"></script>

    <!-- bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/4.0.0-beta/css/bootstrap.min.css">
</head>
<body>
    <div id="app" class="container">


        <nav class="navbar navbar-expand-lg navbar-light alert-success">
            <a class="navbar-brand" href="#">绿都大酒店</a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarColor03" style="">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Admin/Nav">分类管理</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Index">菜品管理</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/upLoad">上传文件</a>
                    </li>

                </ul>

            </div>
        </nav>
        <form action="/Admin/ConfirmAddNav" method="post" id="myForm">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="id">id</label>
                    <input type="text" class="form-control" id="id" name="id">
                </div>
                <div class="form-group col-md-4">
                    <label for="name">名称</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="菜名" >
                </div>
                <div class="form-group col-md-4">
                    <label for="name">链接</label>
                    <input type="text" class="form-control" id="name" name="href" placeholder="链接">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">确定添加</button>
        </form>
    </div>
    <script src="/js/plug-in.js"></script>
    <script src="http://malsup.github.com/jquery.form.js"></script>
    <script>
        var ready = $(document).ready(function () {
            $("#myForm").ajaxForm((data) => {
                $.Pop(data, "alert", function () {
                    window.close();
                    location.href = "/admin/nav";
                });
            });
        });

    </script>
</body>
</html>
