
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>getOrderSuccess</title>

    <!-- bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/4.0.0-beta/css/bootstrap.min.css">

    <!-- jquery -->
    <script src="http://libs.baidu.com/jquery/2.1.4/jquery.min.js"></script>

    <!-- vue -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.13/dist/vue.js"></script>

</head>
<body>
    <div id="app">


        <div class="card">
            <div class="card-header">订单号:{{orderid}}</div>
            <div class="card-body">

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">菜品</th>
                            <th scope="col">单价</th>
                            <th scope="col">数量</th>
                            <th scope="col">总价</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="(item,index) in baskets">
                            <th scope="row">{{index+1}}</th>
                            <td>{{item.name}}</td>
                            <td>{{item.price}}</td>
                            <td>
                                {{item.quantity}}
                            </td>
                            <td>{{(item.price * item.quantity).toFixed(2)}}</td>
                        </tr>
                    </tbody>
                </table>

                <label class="float-right font-weight-bold">共&nbsp;&nbsp;{{cost}}&nbsp;&nbsp;元</label><br />
                <label>备注：</label><br />
                <label>{{note}}</label><br />

            </div>
        </div>


    </div>
    <script src="/js/jquery.cookie.js"></script>
    <!-- bootstrao JS 放到最后   -->
    <script src="https://cdn.bootcss.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script>
        new Vue({
            el: "#app",
            data: {
                baskets: [],
                note: "",
                cost: "",
                orderid:""
            },
            methods: {

            },
            computed: {

            },
            created: function () {

                console.log("---:" + $.cookie("baskets"))
                //this.baskets = JSON.parse($.cookie("baskets"));
                this.note = $.cookie("note");
                this.cost = $.cookie("cost");
                this.orderid = $.cookie("orderid");
            },
        })


    </script>
</body>

</html>
